{% extends 'base.html.twig' %}

{% block title %}
  Acceuil
{% endblock %}

{% block body %}
  <div class="container mx-auto p-4">
    <div class="row">
      {% for article in randomArticle %}
        <div class="col-md-4 mb-3 bg-transparent">
          <div class="card">
            <img class="card-img-top" src="{{ article.picture }}" alt="Card image cap" />
            <div class="card-body">
              <h5 class="card-title">{{ article.title }}</h5>
              <p class="card-text">{{ (article.content|slice(0, 150)) ~ '...' }}</p>
              <a href="#" class="btn btn-primary">Lire plus</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="card mb-11 bg-transparent">
      <div class="row g-0">
        <div class="col-md-2">
          <img src="{{ cdn_base_url ~ homeArticle[0].picture }}" class="img-fluid rounded-start" alt="..." />
        </div>
        <div class="col-md">
          <div class="card-body">
            <h5 class="card-title">{{ homeArticle[0].title }}</h5>
            <p class="card-text">{{ homeArticle[0].content|nl2br }}</p>
            <small class="text-body-secondary">Last updated 3 mins ago</small>
            <a href="#" class="btn btn-primary">Lire plus</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
