{% extends 'back-office/base.html.twig' %}

{% block title %}
	Liste des utilisateurs
{% endblock %}

{% block body %}

	<section class="features-section m-4 ">
		<div class="container text mx-auto">
			<h2 class="section-title mb-8">Liste des utilisateurs</h2>
			<table class="row justify-content-center mx-auto table-hover ">
				<thead>
					<tr>
					
					<th scope="col">Email</th>
					<th scope="col">Pr√©nom/Nom</th>
					<th scope="col">Role</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}

						<tr>
						
							<td class="section mb-3"><p class="fs-5 fw-bold" class="section mb-3">{{ user.id }}. {{ user.email }}</p></td>
							<td class="section mb-3">{{ user.firstName }} {{ user.lastName }}</td>
							<td class="section mb-3">{{ user.roles ? user.roles|json_encode : '' }}
							</td>
							<td>
								<a href="{{ path('app_back_users_edit', {'id' :user.id}) }}" class="btn btn-rounded btn-quiz bi bi-pencil mb-3"></a>
								<a href="{{ path('app_back_users_delete', {'id' :user.id}) }}" class="btn btn-rounded btn-quiz bi bi-trash mb-3"></a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}
